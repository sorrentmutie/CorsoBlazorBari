<h3>@Titolo</h3>

@if(listaEventi == null)
{
    <p>Non ci sono eventi</p>
} else
{
    <table class="table table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Località</th>
                <th>Data</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var evento in listaEventi)
            {
                <tr>
                    <td>@evento.Id</td>
                    <td>@evento.Nome</td>
                    <td>@evento.Località</td>
                    <td>@evento.Data.ToShortDateString()</td>
                    <td><button @onclick="() => OnCancella.InvokeAsync(evento)" class="btn btn-danger">Cancella</button></td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    [Parameter]public List<Evento>? listaEventi { get; set; }
    [Parameter]public string? Titolo { get; set; }

    [Parameter]public EventCallback<Evento> OnCancella { get; set; }

    //private void Cancella(Evento evento)
    //{
    //    listaEventi?.Remove(evento);
    //}

    protected override void OnInitialized()
    {
        base.OnInitialized();
    }
}
